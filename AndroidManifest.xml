<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.m039.tools.mqst"
          android:versionCode="1"
          android:versionName="1.0">
  
  <application android:label="@string/app_name" android:icon="@drawable/icon">

    <!-- main activity   -->
    
    <activity android:name=".InstantActivity"
              android:theme="@android:style/Theme.NoTitleBar"
              android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- activity for debugging purpose --> 
    
    <activity android:name=".InstantDebugActivity"/>

    <!-- dialog to add an item --> 
    
    <activity android:name="com.m039.tools.mqst.activity.AddActivity"/>

    <!-- dialog to edit an item --> 
    
    <activity android:name="com.m039.tools.mqst.activity.EditActivity"/>
    
    <!-- main receiver -->
    
    <receiver android:name=".InstantProvider" >
      <intent-filter>
        <action android:name="com.m039.tools.mqst.INIT_WIDGET"/>        
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
      </intent-filter>
      <meta-data android:name="android.appwidget.provider"
                 android:resource="@xml/instant_provider_info" />
    </receiver>
    
  </application>
  
  <uses-permission android:name="android.permission.CALL_PHONE"/>
  <uses-permission android:name="android.permission.SEND_SMS"/>
  
</manifest> 
