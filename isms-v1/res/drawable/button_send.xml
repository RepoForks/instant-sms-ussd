<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#7FA0B8" />
            <stroke
                android:width="1dp"
                android:color="#305E79" />
            <corners
                android:radius="3dp" />
            
            <padding
                android:left="13dp"
                android:top="13dp"
                android:right="13dp"
                android:bottom="13dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#7FA0B8"
                android:endColor="#9DB7C6"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#305E79" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="13dp"
                android:top="13dp"
                android:right="13dp"
                android:bottom="13dp" />            
        </shape>
    </item>
</selector>